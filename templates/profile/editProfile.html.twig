


{% extends 'front_base.html.twig' %}

  {% block main %}
<div style="margin-top:10%">
<div class="bodyContent">
<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-8 col-md-16">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <td><img class="img_store" src="{{ asset('uploads/' ~ app.user.image) }}" alt="" width="150" height="150"></td>
                                <h6 class="f-w-600">{{app.user.username}}</h6>
                                 <h6 class="f-w-600">{{app.user.prenom}}</h6>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Modification de profile de {{ app.user.prenom }} {{ app.user.nom }}</h6>
                               

                                {{ form(form) }}


                               <ul class="social-link list-unstyled m-t-40 m-b-10">
                             <a href ="{{path('app_profile')}}"class="btn btn-outline-secondary">Retour</a>
                                  
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div>
{% endblock %}
         