{% extends 'back_base.html.twig' %}

{% block main %}

<div class="app-title">
    <div>
        <h1>
            <i class="fa fa-archive"></i>
            Reclamation Dashboard
        </h1>


    </div>
    <ul class="app-breadcrumb breadcrumb">
        <li class="breadcrumb-item">
            <i class="fa fa-home fa-lg"></i>
        </li>
        <li class="breadcrumb-item">
            <a href="">Reclamation</a>
        </li>
    </ul>

</div>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">
                <div class="table-responsive">
                    <div class="d-flex">
                        <div class="p-2">
                            <h1>Reclamation
                            </h1>
                        </div>

                        
                    </div>
                   
                    <table class="table table-hover table-bordered" id="sampleTable">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Etat</th>
                                <th>Utilisateur</th>
                                <th style="text-align : center">actions</th>
                                </tr>
                                </thead>
                                <tbody>
                            {% for reclamation in reclamations %}
                            <tr>
                <td>{{ reclamation.datereclamtion ? reclamation.datereclamtion|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.descriptionreclamtion }}</td>
                <td><img src="{{ asset('uploads/' ~ reclamation.Imagereclamtion) }}" alt="" width="100" height="100"></td>
                <td>{{ reclamation.etatreclamtion }}</td>
                <td>{{ reclamation.idUser }}</td>
                <td style="text-align : center">
                        <a class="btn btn-secondary" href="{{ path('Admin_reclamation_show', {'idreclamation': reclamation.idreclamation}) }}">Afficher</a>
                        <a class=" btn btn-primary" href="{{ path('app_reclamation_edit', {'idreclamation': reclamation.idreclamation}) }}">Modifier</a>
                        <a class="btn btn-outline-danger" href="{{ path('Admin_reclamation_delete', {'idreclamation': reclamation.idreclamation}) }}">Supprimer</a>
                        
            </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
            {% endfor %}
            
            </tbody>
            </table>


            </div>
            </div>
            </div>
            </div>
            </div>
            
            
            {% endblock %}