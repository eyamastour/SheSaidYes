

{% extends 'back_base.html.twig' %}


{% block main %}
	<div class="app-title">
		<div>
			<h1>
				<i class="fa fa-tasks"></i>
				Reservation Services</h1>
			<p>Reservation des Services Dashboard</p>

		</div>
		<ul class="app-breadcrumb breadcrumb">
			<li class="breadcrumb-item">
				<i class="fa fa-home fa-lg"></i>
			</li>
			<li class="breadcrumb-item">
				<a href="/services/">Reservation des Services</a>
			</li>
		</ul>

	</div>

	<div class="row">
		<div class="col-md-12">
			<div class="tile">
				<div class="tile-body">
					<div class="table-responsive">
						<div class="d-flex">
							<div class="mr-auto p-2">
								<h1>Reservation des Services
								</h1>
							</div>
							<div class="p-2">
								<a class="btn btn-outline-warning " href="{{ path('app_reservationservice_edit', {'id': reservationservice.id}) }}">edit</a>
							</div>
							<div class="p-2">
								{{ include('reservationservice/_delete_form.html.twig') }}</div>
						</div>


						<table class="table table-hover table-bordered" id="sampleTable">
							<tbody>
								<tr>
									<th>Image</th>
									<td><img src="{{ asset('uploads/' ~ reservationservice.idservice.image) }}" alt="" width="100" height="100"></td>
								</tr>
								<tr>
									   <th>Date</th>
                                      <td>{{ reservationservice.date }}</td>
								</tr>
								<tr>
								<th>Du</th>
                <td>{{ reservationservice.heuredeb }}</td>
								</tr>
								<tr>
								  <th>Au</th>
                <td>{{ reservationservice.heurefin }}</td>
								</tr>

								<tr>
									 <th>Prix</th>
                <td>{{ reservationservice.prixresserv }}</td>
								</tr>

                                 <tr>
                <th>Etat</th>
               
                {% if (reservationservice.etat == 'Yes')  %}
                        <td style="margin-left:50%">
				<button type="button" class="btn btn-lg btn-outline-success disabled">Payer</button>
                {%  else  %}
                 <button type="button" class="btn btn-block btn-outline-danger disabled">Non Payer</button>
                 </td>
                 {% endif %} 
            </tr>

            <tr>
             <th>Client</th>
 <td>{{ reservationservice.iduser.nom }}</td>
            </tr>
                <tr>
             <th>Service</th>
 <td>{{ reservationservice.idservice.nom }}</td>
            </tr>

               <tr>
             <th>Description du service</th>
 <td>{{ reservationservice.idservice.description }}</td>
            </tr>

							</tbody>
						</table>

						<a class="btn btn-secondary" style="width:80px" href="{{ path('app_reservationservice_index') }}">Voir list</a>


					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
