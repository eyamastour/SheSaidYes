              <div class="col-md-4">
                   <h2 class="card-title mt-5 ml-5">{{ r.reclamation.idUser }}</h2>
              </div>
              <div class="col-md-8">
                <h2 class="card-title mt-2">{{ r.createdAt|date }}</h2>
                <p>{{ r.message }} </p>
                 <div style="margin-left:60%">
                   <a class="btn btn-secondary" href="{{ path('app_msg_reponse_show', {'id': r.id})  }}">read more</a>
                  </div>
              </div>
          </div>
          {% endfor %}
       </div>
      </div>               
              </div>
              <!-- /.card-body -->
            </div>
             <a class="btn btn-secondary" href="{{ path('app_reclamation_index') }}">back to list</a>
