<!DOCTYPE html>
<html lang="en">


	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta http-equiv="X-UA-Compatible" content="ie=edge">
		<title>Inscription</title>
		<link
		href="{{ asset('img/home/fav.png') }} " rel="icon">

		<!-- Font Icon -->
		<link
		rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">

		<!-- Main css -->
		<link rel="stylesheet" href="css/style2.css">


	</head>


	<body>

		<div class="main">

			<div class="container">
				<div class="booking-content">
					<div class="booking-image">
						<img class="booking-img" src="images/wedd.jpg" alt="Booking Image">
					</div>

					<div
						class="booking-form">

						{# <form id="RegistrationType"> #}
						<span class="login1000-form-title p-b-43">
							Sign in to continue
						</span>
						{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
						<div class="form-group form-input">
							{{ form_widget(form.nom,{'attr': {'placeholder': 'Nom d\'utilisateur '}}) }}
                         {{ form_errors(form.nom) }}
                        </div>

                        <div class="form-group form-input">
                            {{ form_widget(form.prenom,{'attr': {'placeholder': 'Prenom d\'utilisateur '}}) }}
							{{ form_errors(form.prenom) }}
						</div>

						<div class="form-group form-input">
							{{ form_widget(form.tel,{'attr': {'placeholder': 'Num '}}) }}
							{{ form_errors(form.tel) }}
						</div>

						<div class="form-group form-input">
							{{ form_widget(form.email,{'attr': {'placeholder': 'Email '}}) }}
							{{ form_errors(form.email) }}
						</div>

						<div class="input-group">
							{{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}

							<div class="form-group form-input">
								{{ form_widget(form.role,{'attr': {'placeholder': 'role '}}) }}
								{{ form_errors(form.role) }}
							</div>
							<div class="form-group form-input">
								{{ form_label(form.image,"Image : ") }}
								{{ form_widget(form.image) }}
							</div>
							{# render the captcha field to the form in the view #}
							{{ form_row(form.captchaCode) }}
							<button type="submit" class="btn btn-success mt-lg-10">S'inscrire</button>

							{{form_end(form) }}
							<li>
								<a class="nav-link  " href="{{path('default')}}">Check Our Facebook Page</a>
							</li>
							{# <li>
							                                    <a class="nav-link  " href="{{path('default')}}">Check Our Facebook Page</a>
							                                </li> #}
							{# </form> #}
						</div>
					</div>
				</div>

			</div>


			<script src="vendor/bootstrap/js/popper.js"></script>
			<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
			<!-- JS -->
			<script src="vendor/jquery/jquery.min.js"></script>
			<script src="js/main4.js"></script>


		</body><!-- This templates was made by Colorlib (https://colorlib.com) --></body>
</html>
