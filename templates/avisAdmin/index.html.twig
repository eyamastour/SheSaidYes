{% extends 'back_base.html.twig' %}
{% block main %}

	<div class="app-title">
		<div>
			<h1>
				<i class="fa fa-archive"></i>
				Avis Dashbord</h1>
		</div>
		<ul class="app-breadcrumb breadcrumb">
			<li class="breadcrumb-item">
				<i class="fa fa-home fa-lg"></i>
			</li>
			<li class="breadcrumb-item">
				<a href="">Avis</a>
			</li>
		</ul>

	</div>
	<div class="row">
		<div class="col-md-12">
			<div class="tile">
				<div class="tile-body">
					<div class="table-responsive">
						<div class="d-flex">
							<div class="p-2">
								<h1>Avis
								</h1>
							</div>




						</div>


						<table class="table table-hover table-bordered" id="sampleTable">
							<thead>
								<tr>
                                    <th>Rating</th>
                                    <th>Utilisateur</th>
                                    <th>Description</th>
									<th style="text-align : center">actions</th>
								</tr>
							</thead>
							<tbody>
								{% for avi in avis %}
									<tr>
                                        <td><input id="input-id" type="text" class="rating" data-size="lg" value="{{ avi.rating}}"></td>
                                        <td>{{ avi.idUser }}</td>
                                        <td>{{ avi.descriptionavis }}</td>
										<td style="text-align : center">
											<a class="btn btn-outline-success " href="{{ path('Admin_avis_show', {'idavis': avi.idavis}) }}">Afficher</a>
											{{ include('avisAdmin/delete_form.html.twig') }}

										

										</td>
									</tr>
								{% else %}
									<tr>
										<td colspan="7">no records found</td>
									</tr>
								{% endfor %}

							</tbody>
						</table>
						
						


					</div>
			
				</div>
			</div>
		</div>
	</div>

	

{% endblock %}