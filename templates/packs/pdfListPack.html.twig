	<div style="margin : 30px">
		<div style="text-align:center">
			<h2>
				Packs PDF</h2>
		</div>

		<table border="1px">
			<thead>
				<tr>
					<th>Image</th>
					<th>Nom</th>
					<th>Description</th>
					<th>Prix</th>
					<th>Promotion</th>

				</tr>
			</thead>
			<tbody>
				{% for pack in packs %}
					<tr>
						<td>
							<img src="{{ './uploads/' ~ pack.image }}" alt="" width="100" height="100"></td>
						<td>{{ pack.nom }}</td>
						<td>{{ pack.description }}</td>
						<td>{{ pack.prix }}</td>
						<td>{{ pack.promo }}%</td>

					</tr>
				{% else %}
					<tr>
						<td colspan="7">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
