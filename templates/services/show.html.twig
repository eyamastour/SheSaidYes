{% extends 'back_base.html.twig' %}


{% block main %}
	<div class="app-title">
		<div>
			<h1>
				<i class="fa fa-tasks"></i>
				Services</h1>
			<p>Services Dashboard</p>

		</div>
		<ul class="app-breadcrumb breadcrumb">
			<li class="breadcrumb-item">
				<i class="fa fa-home fa-lg"></i>
			</li>
			<li class="breadcrumb-item">
				<a href="/services/">Services</a>
			</li>
		</ul>

	</div>

	<div class="row">
		<div class="col-md-12">
			<div class="tile">
				<div class="tile-body">
					<div class="table-responsive">
						<div class="d-flex">
							<div class="mr-auto p-2">
								<h1>Services
								</h1>
							</div>
							<div class="p-2">
								<a class="btn btn-outline-warning " href="{{ path('app_services_edit', {'id': service.id}) }}">edit</a>
							</div>
							<div class="p-2">
								{{ include('services/_delete_form.html.twig') }}</div>
						</div>


						<table class="table table-hover table-bordered" id="sampleTable">
							<tbody>
								<tr>
									<th>Image</th>
									<td><img src="{{ asset('uploads/' ~ service.image) }}" alt="" width="100" height="100"></td>
								</tr>
								<tr>
									<th>Nom</th>
									<td>{{ service.nom }}</td>
								</tr>
								<tr>
									<th>Description</th>
									<td>{{ service.description }}</td>
								</tr>
								<tr>
									<th>Prix</th>
									<td>{{ service.prix }}</td>
								</tr>
								<tr>
									<th>Promotion</th>
									<td>{{ service.promo }}%</td>
								</tr>

								<tr>
									<th>Categorie</th>
									<td>{{ service.categorie }}</td>
								</tr>

							</tbody>
						</table>

						<a class="btn btn-secondary" href="{{ path('app_services_index') }}">back to list</a>


					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
